{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "restore-tools",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "tool",
                "restore"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "dependsOn": "restore-tools",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-client",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "./client"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}